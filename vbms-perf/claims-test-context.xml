<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- sets all beans defined as "lazy-init=true' (to not automatically instantiate unless needed) -->
    <bean id="postProcessor" class="gov.va.vba.vbms.spring.BeanFactoryPostProcessorImpl"/>

    <bean id="ehcache" class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean">
        <property name="configLocation" value="classpath:ehcache.xml"></property>
        <property name="shared" value="true"/>
        <property name="cacheManagerName" value="Default VBMS UI Web Cache Manager"/>
    </bean>

    <!-- import 'real' umbrella context -->
    <import resource="classpath:META-INF/spring/ui-web-root-context.xml"/>

    <!-- override datasources with simpleJdbc versions -->
    <import resource="classpath:META-INF/spring/spring-contexts/persistence/datasources-test-context.xml"/>

    <!-- override securityHandler and loggingHandler -->
    <import resource="classpath:META-INF/spring/spring-contexts/vetsnet/vetsnet-test-context.xml"/>

    <bean id="ignoredBeans" class="gov.va.vba.vbms.spring.EmptyMockPostProcessor">
        <property name="emptyMockClasses" value="gov.va.vba.vbms.common.framework.performance.PerformanceMonitorAspect"/>
    </bean>

    <bean id="simpleFileService" class="gov.va.vba.vbms.spring.MockedSimpleFileService">
        <!--
        <property name="servletContext" ref="mockServletContext"/>
        <property name="fileDirPath" value="/WEB-INF/tmp/"/>
        <property name="pdfService" ref="pdfService" />
        -->
    </bean>

</beans>